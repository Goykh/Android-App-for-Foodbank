<RootWidget>
    # The screen manager with all the screens
    canvas.before:
        # This sets the transition color as white
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    StartupScreen:
        name: "startup_screen"
    InsertOrgScreen:
        name: "insert_org_screen"
    InsertShopScreen:
        name: "insert_shop_screen"
    TypeAndAmountScreen:
        name: "type_and_amount_screen"
    SuccessScreen:
        name: "success_screen"
    OrgOutputScreen:
        name: "org_output_screen"
    TextOutputScreen:
