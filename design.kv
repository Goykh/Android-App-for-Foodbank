#: import utils kivy.utils
#: import Factory kivy.factory.Factory
<StartupScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        Image:
            source: 'pictures/pb_logo.jpg'

        Button:
            text: "Přidat zápis"
            on_press: root.to_insert_screen()
            size_hint: .3, .5
        Button:
            text: "Vypsat data"
            on_press: root.to_output_screen()
            size_hint: .3, .5

<InsertOrgScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    on_pre_enter: root.on_pre_enter()
    GridLayout:
        cols:1
        id: grid
        Label:
            text: "Vyberte Organizaci"
            size_hint: .5, .3
            color: utils.get_color_from_hex('##050505')
        ScrollView:
            GridLayout:
                cols: 2
                spacing: "10dp"
                id: box
                size_hint_y: None
                height: self.minimum_height

<InsertShopScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols:1
        Label:
            text: "Vyberte Obchod"
            size_hint: .5, .3
            color: utils.get_color_from_hex('##050505')
        ScrollView:
            GridLayout:
                cols: 2
                spacing: "10dp"
                id: box
                size_hint_y: None
                height: self.minimum_height

<TypeAndAmountScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        spacing: "10dp"
        Label:
            text: "Vyberte typ:"
            size_hint: 1, .3
            color: utils.get_color_from_hex('##050505')
        GridLayout:
            id: grid
            cols: 2
            spacing: "10dp"
            size_hint: 1, .3
            Button:
                id: type_a
                text: "A - Sbírka potravin"
                size_hint: .5, .5
                on_press: root.get_type("a")
                font_size: '13sp'
            Button:
                id: type_b
                text: "B - Čerstvé potraviny"
                size_hint: .5, .5
                on_press: root.get_type("b")
                font_size: '13sp'
            Button:
                id: type_c
                text: "C - Trvanlivé potraviny a nápoje"
                size_hint: .5, .5
                on_press: root.get_type("c")
                font_size: '13sp'
            Button:
                id: type_m
                text: "M - Materialní a drogérie"
                size_hint: .5, .5
                on_press: root.get_type("m")
                font_size: '13sp'

        BoxLayout:
            orientation: "vertical"
            size: root.width, root.height

            TextInput:
                hint_text: "Hmotnost v kg"
                id: calculator_input
                halign: "right"
                font_size: 16
                size_hint:(1, .15)

                multiline: False
                write_tab: False
            GridLayout:
                cols: 4
                rows: 4

                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '7'
                    on_press: root.button_press(7)
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '8'
                    on_press: root.button_press(8)
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '9'
                    on_press: root.button_press(9)
                Button:
                    id: clear
                    size_hint: (.2, .2)
                    font_size: 16
                    text: 'C'
                    on_press: root.clear()
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '4'
                    on_press: root.button_press(4)
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '5'
                    on_press: root.button_press(5)
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '6'
                    on_press: root.button_press(6)
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '-'
                    on_press: root.math_operation('-')
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '1'
                    on_press: root.button_press(1)
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '2'
                    on_press: root.button_press(2)
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '3'
                    on_press: root.button_press(3)
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '+'
                    on_press: root.math_operation('+')

                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '0'
                    on_press: root.button_press(0)
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '.'
                    on_press: root.decimal_click()
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '='
                    on_press: root.equals()
                Button:
                    size_hint: (.2, .2)
                    font_size: 16
                    text: '*'
                    on_press: root.math_operation('*')

        Button:
            text: "Potvrdit"
            size_hint: 1, .15
            id: confirm_button
            on_press: root.confirm()


<SuccessScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 1
            size_hint: 1, .15
            canvas.before:
                Color:
                    rgba: 210/255, 211/255, 214/255, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'Dnes přidané záznamy'
                color: 0, 0, 0, 1
        ScrollView:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                cols: 1
                spacing: "10dp"
                id: query_output
                row_force_default: True
                row_default_height: 20
                spacing: (10, 10)
                height: self.minimum_height
                size_hint_y: None
        GridLayout:
            cols: 3
            size_hint: 1, .20
            Button:
                text: "Opravit zadání"
                on_press: root.return_to_calculator()
            Button:
                text: "Návrat do výběru obchodů."
                on_press: root.return_to_org_screen()
            Button:
                text: "Návrat do hlavního menu."
                on_press: root.return_to_menu()


<OrgOutputScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
