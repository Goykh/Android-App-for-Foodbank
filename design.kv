<SuccessScreen>
    GridLayout:
        cols:1
        Label:
            text: "Záznam úspěšně přidán!"
        Button:
            text: "Návrat do menu."
            on_press: root.return_to_menu()


<RootWidget>:
    StartupScreen:
        name: "startup_screen"
    InsertOrgScreen:
        name: "insert_org_screen"
    InsertShopScreen:
        name: "insert_shop_screen"
    TypeAndAmountScreen:
        name: "type_and_amount_screen"
    SuccessScreen:
        name: "success_screen"
    OrgOutputScreen:
        name: "org_output_screen"
    TextOutputScreen:
        name: "text_output_screen"