<TypeAndAmountScreen>
    # Screen with 4 toggle buttons to pick the type
    # and a basic calculator to pick and add up the amount
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        spacing: "10dp"
        BoxLayout:
            orientation: 'horizontal'
            padding: "15dp", "15dp"
            size_hint: 1, .15
            Button:
                text: 'Zpět'
                size_hint: .03, .67
                background_color: 0, 0, 0, 0
                on_press: root.back_button()
                Image:
                    source: 'pictures/back_arrow.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Label:
                text: "Vyberte Organizaci"
                size_hint: .5, .3
                color: utils.get_color_from_hex('##050505')
                pos_hint: {'center_x': 1}
            Label:
                size_hint: .03, .67
        GridLayout:
            # The ToggleButtons are placed here
            id: grid
            cols: 2
            spacing: "10dp"
            size_hint: 1, .3
            ToggleButton:
                group: type
                id: type_a
                text: "A\nSbírka potravin"
                halign: 'center'
                size_hint: .5, .5
                font_size: '16sp'
                on_press: root.get_type("a")
                background_color: {'normal': utils.get_color_from_hex('#585858'), 'down': utils.get_color_from_hex('#077920')} [self.state]
            ToggleButton:
                group: type
                id: type_b
                text: "B\nČerstvé potraviny"
                halign: 'center'
                size_hint: .5, .5
                font_size: '16sp'
                on_press: root.get_type("b")
                background_color: {'normal': utils.get_color_from_hex('#585858'), 'down': utils.get_color_from_hex('#077920')} [self.state]
            ToggleButton:
                group: type
                id: type_c
                text: "C\nTrvanlivé potraviny a nápoje"
                halign: 'center'
                size_hint: .5, .5
                font_size: '16sp'
                on_press: root.get_type("c")
                background_color: {'normal': utils.get_color_from_hex('#585858'), 'down': utils.get_color_from_hex('#077920')} [self.state]
            ToggleButton:
                group: type
                id: type_m
                text: "M\nMaterialní a drogérie"
                halign: 'center'
                size_hint: .5, .5
                font_size: '16sp'
                on_press: root.get_type("m")
                background_color: {'normal': utils.get_color_from_hex('#585858'), 'down': utils.get_color_from_hex('#077920')} [self.state]
        BoxLayout:
            # The calculator part
            orientation: "vertical"
            size: root.width, root.height
            TextInput:
                hint_text: "Hmotnost v kg"
                id: calculator_input
                halign: "right"
                font_size: '16sp'
                size_hint:(1, .15)

                multiline: False
                write_tab: False
            GridLayout:
                cols: 4
                rows: 4

                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '7'
                    on_press: root.button_press(7)
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '8'
                    on_press: root.button_press(8)
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '9'
                    on_press: root.button_press(9)
                Button:
                    id: clear
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: 'C'
                    on_press: root.clear()
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '4'
                    on_press: root.button_press(4)
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '5'
                    on_press: root.button_press(5)
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '6'
                    on_press: root.button_press(6)
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '-'
                    on_press: root.math_operation('-')
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '1'
                    on_press: root.button_press(1)
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '2'
                    on_press: root.button_press(2)
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '3'
                    on_press: root.button_press(3)
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '+'
                    on_press: root.math_operation('+')

                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '0'
                    on_press: root.button_press(0)
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '.'
                    on_press: root.decimal_click()
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '='
                    on_press: root.equals()
                Button:
                    size_hint: (.2, .2)
                    font_size: '20sp'
                    text: '*'
                    on_press: root.math_operation('*')
        Button:
            text: "Potvrdit"
            font_size: '16sp'
            size_hint: 1, .15
            id: confirm_button
            on_press: root.confirm()


<SuccessScreen>
    # Confirmation screen with listed data added in current session
    # and options to go back or continue.
    # The SQL queries are confirmed with either back to menu
    # or back to pick org screen buttons.
    # Return to calculator lets you fix it
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 1
            size_hint: 1, .15
            canvas.before:
                Color:
                    rgba: 210/255, 211/255, 214/255, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'Dnes přidané záznamy'
                color: 0, 0, 0, 1
        ScrollView:
            # The queries from current session are
            # in the GridLayout below
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                cols: 1
                spacing: "10dp"
                id: query_output
                row_force_default: True
                row_default_height: "20dp"
                spacing: "10dp", "10dp"
                height: self.minimum_height
                size_hint_y: None
        GridLayout:
            cols: 3
            size_hint: 1, .20
            Button:
                text: "Opravit\nzadání"
                font_size: '20sp'
                halign: 'center'
                on_press: root.return_to_calculator()
            Button:
                text: "Návrat\ndo výběru\nobchodů."
                font_size: '20sp'
                halign: 'center'
                on_press: root.return_to_org_screen()
            Button:
                text: "Návrat\ndo hlavního\nmenu."
                font_size: '20sp'
                halign: 'center'
                on_press: root.return_to_menu()


