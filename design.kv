<TextOutputScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 3
            size_hint: 1, .15
            canvas.before:
                Color:
                    rgba: 210/255, 211/255, 214/255, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:

                text: 'OBCHOD'
                color: 0, 0, 0, 1
                padding: (10, 0)
            Label:
                text: 'TYP'
                color: 0, 0, 0, 1
                padding: (10, 0)
            Label:
                text: 'HMOTNOST'
                color: 0, 0, 0, 1
                padding: (0, 0)
        ScrollView:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            GridLayout:
                cols: 3
                id: output_grid
                row_force_default: True
                row_default_height: 20
                spacing: (10, 10)
                height: self.minimum_height
                size_hint_y: None


        GridLayout:
            cols: 3
            size_hint_y: None
            height: '40dp'
            Button:
                text: "Zpátky"
                on_press: root.return_to_previous_screen()
            Button:
                text: "Detailní výpis"
                on_press: root.to_detailed_output()
            Button:
                text: "Návrat do menu"
                on_press: root.return_to_menu()




