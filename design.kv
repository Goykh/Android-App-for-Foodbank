#: import utils kivy.utils
#: import Factory kivy.factory.Factory
<StartupScreen>
    # First Screen
    # Has two buttons to either add or read data
    canvas.before:
    # this canvas sets the white background for the screens
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        padding: '15dp', '15dp'
        spacing: '20dp', '20dp'
        Image:
            source: 'pictures/pb_logo.jpg'
        Button:
            text: "Přidat zápis"
            font_size: '20sp'
            on_press: root.to_insert_screen()
            size_hint: .3, .5
        Button:
            text: "Vypsat data"
            font_size: '20sp'
            on_press: root.to_output_screen()
            size_hint: .3, .5

<InsertOrgScreen>
    # Screen with dynamically generated buttons
    # to pick the organisation
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    on_pre_enter: root.on_pre_enter()
    GridLayout:
        cols:1
        id: grid
        spacing: "20dp", "20dp"
        BoxLayout:
            orientation: 'horizontal'
            padding: '15dp', '15dp'
            size_hint: 1, .15
            Button:
                id: img_btn
                text: 'Zpět'
                size_hint: .03, .67
                background_color: 0, 0, 0, 0
                on_press: root.back_button()
                # Image for the button arrow back
                Image:
                    source: 'pictures/back_arrow.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Label:
                text: "Vyberte Organizaci"
                size_hint: .5, .3
                color: utils.get_color_from_hex('##050505')
                pos_hint: {'center_x': 1}
            Label:
                size_hint: .03, .67
        ScrollView:
            # The scrollview with the dynamic buttons
            # the buttons are generated inside the GridLayout
            id: scroll_org
            GridLayout:
                cols: 2
                spacing: "10dp"
                id: box
                size_hint_y: None
                height: self.minimum_height

