<StartupScreen>
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20

        Label:
            text: "Potravinová banka"
            font_size: '20'

        Button:
            text: "Přidat zápis"
            on_press: root.to_insert_screen()
            size_hint: .3, .5
        Button:
            text: "Vypsat data"
            on_press: root.to_output_screen()
            size_hint: .3, .5

<InsertOrgScreen>
    GridLayout:
        cols:1
        Label:
            text: "Vyberte Organizaci"
            size_hint: .5, .3
        ScrollView:
            GridLayout:
                cols: 4
                spacing: "10dp"
                id: box
                size_hint_y: None
                height: self.minimum_height

<InsertShopScreen>
    GridLayout:
        cols:1
        Label:
            text: "Vyberte Obchod"
            size_hint: .5, .3
        ScrollView:
            GridLayout:
                cols: 4
                spacing: "10dp"
                id: box
                size_hint_y: None
                height: self.minimum_height

<TypeAndAmountScreen>
    GridLayout:
        cols: 1
        spacing: "10dp"
        Label:
            text: "Vyberte typ:"
            size_hint: 1, .3
        GridLayout:
            cols: 2
            spacing: "10dp"
            Button:
                id: type_a
                text: "A - Sbírka potravin"
                size_hint: .5, .5
                on_press: root.get_type("a")
            Button:
                id: type_b
                text: "B - Čerstvé potraviny"
                size_hint: .5, .5
                on_press: root.get_type("b")
            Button:
                id: type_c
                text: "C - Trvanlivé potraviny a nápoje"
                size_hint: .5, .5
                on_press: root.get_type("c")
            Button:
                id: type_m
                text: "M - Materialní a drogérie"
                size_hint: .5, .5
                on_press: root.get_type("m")
        GridLayout:
            cols: 1
            spacing: "10dp"
            Label:
                text: "Zadejte hmotnost v kg"
            TextInput:
                id: amount
                spacing: "10dp"
                hint_text: "Hmotnost v kg"
            Button:
                id: confirm_button
                on_press: root.confirm()
                spacing: "10dp"
                text: "Potvrdit"

<OrgOutputScreen>
    GridLayout:
        cols:1
        Label:
            text: "Vyberte Organizaci"
            size_hint: .5, .3
        ScrollView:
            GridLayout:
                cols: 4
                spacing: "10dp"
                id: box
                size_hint_y: None
                height: self.minimum_height

