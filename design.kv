#: import utils kivy.utils
<StartupScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20

        Label:
            text: "Potravinová banka"
            color:
            font_size: '20'
            color: utils.get_color_from_hex('##050505')

        Button:
            text: "Přidat zápis"
            on_press: root.to_insert_screen()
            size_hint: .3, .5
        Button:
            text: "Vypsat data"
            on_press: root.to_output_screen()
            size_hint: .3, .5

<InsertOrgScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    on_pre_enter: root.on_pre_enter()
    GridLayout:
        cols:1
        id: grid
        Label:
            text: "Vyberte Organizaci"
            size_hint: .5, .3
            color: utils.get_color_from_hex('##050505')
        ScrollView:
            GridLayout:
                cols: 4
                spacing: "10dp"
                id: box
                size_hint_y: None
                height: self.minimum_height

<InsertShopScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols:1
        Label:
            text: "Vyberte Obchod"
            size_hint: .5, .3
            color: utils.get_color_from_hex('##050505')
        ScrollView:
            GridLayout:
                cols: 4
                spacing: "10dp"
                id: box
                size_hint_y: None
                height: self.minimum_height

<TypeAndAmountScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        spacing: "10dp"
        Label:
            text: "Vyberte typ:"
            size_hint: 1, .3
            color: utils.get_color_from_hex('##050505')
        GridLayout:
            id: grid
            cols: 2
            spacing: "10dp"
            Button:
                id: type_a
                text: "A - Sbírka potravin"
                size_hint: .5, .5
                on_press: root.get_type("a")
                font_size: '13sp'
            Button:
                id: type_b
                text: "B - Čerstvé potraviny"
                size_hint: .5, .5
                on_press: root.get_type("b")
                font_size: '13sp'
            Button:
                id: type_c
                text: "C - Trvanlivé potraviny a nápoje"
                size_hint: .5, .5
                on_press: root.get_type("c")
                font_size: '13sp'
            Button:
                id: type_m
                text: "M - Materialní a drogérie"
                size_hint: .5, .5
                on_press: root.get_type("m")
                font_size: '13sp'
        GridLayout:
            cols: 1
            spacing: "10dp"
            Label:
                text: "Zadejte hmotnost v kg"
            TextInput:
                id: amount
                spacing: "10dp"
                hint_text: "Hmotnost v kg"
                input_filter: 'float'
                multiline: False
                write_tab: False
            Button:
                id: confirm_button
                on_press: root.confirm()
                spacing: "10dp"
                text: "Potvrdit"

<OrgOutputScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols:1
        Label:
            text: "Vyberte Organizaci"
            size_hint: .5, .3
            color: utils.get_color_from_hex('##050505')
        ScrollView:
            GridLayout:
                cols: 4
                spacing: "10dp"
                id: box
                size_hint_y: None
                height: self.minimum_height


<TextOutputScreen>:
#    canvas.before:
#        Color:
#            rgba: 1, 1, 1, 1
#        Rectangle:
#            pos: self.pos
#            size: self.size
    BoxLayout:
        orientation: 'vertical'

        ScrollView:
            GridLayout:
                cols: 3
                id: grid
                Label:
                    text: 'OBCHOD'
                Label:
                    text: 'TYP'
                Label:
                    text: 'HMOTNOST'

        Button:
            text: "Návrat do menu"
            on_press: root.return_to_menu()
            size_hint_y: None
            height: '40dp'


<SuccessScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols:1
        Label:
            text: "Záznam úspěšně přidán!"
        Button:
            text: "Návrat do menu."
            on_press: root.return_to_menu()


<RootWidget>:
    StartupScreen:
        name: "startup_screen"
    InsertOrgScreen:
        name: "insert_org_screen"
    InsertShopScreen:
        name: "insert_shop_screen"
    TypeAndAmountScreen:
        name: "type_and_amount_screen"
    SuccessScreen:
        name: "success_screen"
    OrgOutputScreen:
        name: "org_output_screen"
    TextOutputScreen:
        name: "text_output_screen"